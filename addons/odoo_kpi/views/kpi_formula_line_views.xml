<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_kpi_formula_line_tree" model="ir.ui.view">
        <field name="name">kpi.formula.line.tree</field>
        <field name="model">kpi.formula.line</field>
        <field name="arch" type="xml">
            <list string="KPI Formula Lines" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="operator"/>
                <field name="operand_type"/>
                <field name="operand_kpi_id" invisible="operand_type != 'kpi'" required="operand_type == 'kpi'" />
                <field name="operand_value" invisible="operand_type != 'constant'" required="operand_type == 'constant'" />
                <field name="operand_field" invisible="operand_type != 'field'" required="operand_type == 'field'" />
            </list>
        </field>
    </record>
</odoo>
