<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend product.product form view to add KPI tab -->
    <record id="view_product_form_kpi" model="ir.ui.view">
        <field name="name">product.product.form.kpi</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="KPI" name="kpi">
                    <group>
                        <field name="id" invisible="1"/>
                    </group>
                    <separator string="KPI Values for this Product"/>
                    <group>
                        <button name="%(odoo_kpi.action_kpi_value)d" type="action"
                                class="btn btn-primary" icon="fa-bar-chart"
                                context="{'default_source_model': 'product.product', 'default_source_id': id}">
                            View KPI Values
                        </button>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>