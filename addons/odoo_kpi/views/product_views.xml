<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend product.template form view to add KPI tab -->
    <record id="view_product_template_form_kpi" model="ir.ui.view">
        <field name="name">product.template.form.kpi</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="base.view_product_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="KPI" name="kpi">
                    <group>
                        <separator string="KPI Values for this Product"/>
                        <button name="%(odoo_kpi.action_kpi_value)d" type="action"
                                class="btn btn-primary" icon="fa-bar-chart"
                                context="{'default_source_model': 'product.template', 'default_source_id': id}">
                            View KPI Values
                        </button>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>