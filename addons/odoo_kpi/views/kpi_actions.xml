<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_kpi_definition" model="ir.actions.act_window">
        <field name="name">KPI Definitions</field>
        <field name="res_model">kpi.definition</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Create and manage KPI definitions.</field>
    </record>

    <record id="action_kpi_value" model="ir.actions.act_window">
        <field name="name">KPI Actual Values</field>
        <field name="res_model">kpi.value</field>
        <field name="view_mode">list,form</field>
        <field name="help">View and manage KPI actual values.</field>
    </record>

    <record id="action_kpi_budget_line" model="ir.actions.act_window">
        <field name="name">KPI Budget Lines</field>
        <field name="res_model">kpi.budget.line</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage KPI budget lines.</field>
    </record>

    <record id="action_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">KPI Dashboards</field>
        <field name="res_model">kpi.dashboard</field>
        <field name="view_mode">list,form</field>
        <field name="help">Create and manage KPI dashboards.</field>
    </record>

    <record id="action_kpi_dashboard_view" model="ir.actions.act_window">
        <field name="name">KPI Dashboard</field>
        <field name="res_model">kpi.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">fullscreen</field>
    </record>

    <!-- KPI Budget Action -->
    <record id="kpi_budget_action" model="ir.actions.act_window">
        <field name="name">KPI Budgets</field>
        <field name="res_model">kpi.budget</field>
        <field name="view_mode">list,form</field>
        <field name="help">Create and manage KPI budgets for forecasting and planning.</field>
    </record>
</odoo>