<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_kpi_source_tree" model="ir.ui.view">
        <field name="name">kpi.source.tree</field>
        <field name="model">kpi.source</field>
        <field name="arch" type="xml">
            <tree string="KPI Sources">
                <field name="kpi_id"/>
                <field name="source_model"/>
                <field name="is_global"/>
                <field name="source_filter"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_kpi_source_form" model="ir.ui.view">
        <field name="name">kpi.source.form</field>
        <field name="model">kpi.source</field>
        <field name="arch" type="xml">
            <form string="KPI Source">
                <sheet>
                    <group>
                        <group>
                            <field name="kpi_id"/>
                            <field name="source_model"/>
                        </group>
                        <group>
                            <field name="is_global"/>
                        </group>
                    </group>
                    <group>
                        <field name="source_filter" widget="domain" options="{'model': 'source_model'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>