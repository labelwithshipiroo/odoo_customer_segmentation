<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_kpi_budget_line_tree" model="ir.ui.view">
        <field name="name">kpi.budget.line.tree</field>
        <field name="model">kpi.budget.line</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="KPI Budget Lines">
                <field name="kpi_definition_id"/>
                <field name="budget_name"/>
                <field name="source_name"/>
                <field name="period_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="value"/>
                <field name="actual_value"/>
                <field name="variance"/>
                <field name="variance_percent"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_kpi_budget_line_form" model="ir.ui.view">
        <field name="name">kpi.budget.line.form</field>
        <field name="model">kpi.budget.line</field>
        <field name="arch" type="xml">
            <form string="KPI Budget Line">
                <sheet>
                    <group>
                        <group>
                            <field name="kpi_definition_id"/>
                            <field name="budget_id"/>
                            <field name="source_model"/>
                            <field name="source_id"/>
                            <field name="source_name"/>
                        </group>
                        <group>
                            <field name="period_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="value"/>
                            <field name="actual_value" readonly="1"/>
                        </group>
                        <group>
                            <field name="variance" readonly="1"/>
                            <field name="variance_percent" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_kpi_budget_line_search" model="ir.ui.view">
        <field name="name">kpi.budget.line.search</field>
        <field name="model">kpi.budget.line</field>
        <field name="arch" type="xml">
            <search string="Search KPI Budget Lines">
                <field name="kpi_definition_id"/>
                <field name="budget_name"/>
                <field name="source_name"/>
                <field name="date_from"/>
                <filter string="This Month" name="this_month" domain="[('date_from', '>=', (context_today() - relativedelta(day=1)).strftime('%%Y-%%m-%%d')), ('date_from', '<=', (context_today() + relativedelta(day=31)).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="This Year" name="this_year" domain="[('date_from', '>=', context_today().strftime('%%Y-01-01')), ('date_from', '<=', context_today().strftime('%%Y-12-31'))]"/>
                <group expand="0" string="Group By">
                    <filter string="KPI" name="group_kpi" context="{'group_by':'kpi_definition_id'}"/>
                    <filter string="Budget" name="group_budget" context="{'group_by':'budget_id'}"/>
                    <filter string="Period Type" name="group_period" context="{'group_by':'period_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_kpi_budget_line" model="ir.actions.act_window">
        <field name="name">KPI Budget Lines</field>
        <field name="res_model">kpi.budget.line</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
