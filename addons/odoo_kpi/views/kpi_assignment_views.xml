<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- KPI Assignment List View -->
    <record id="view_kpi_assignment_list" model="ir.ui.view">
        <field name="name">kpi.assignment.list</field>
        <field name="model">kpi.assignment</field>
        <field name="arch" type="xml">
            <list string="KPI Assignments">
                <field name="kpi_definition_id"/>
                <field name="source_model"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- KPI Assignment Form View -->
    <record id="view_kpi_assignment_form" model="ir.ui.view">
        <field name="name">kpi.assignment.form</field>
        <field name="model">kpi.assignment</field>
        <field name="arch" type="xml">
            <form string="KPI Assignment">
                <sheet>
                    <group>
                        <group>
                            <field name="kpi_definition_id"/>
                            <field name="source_model"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KPI Assignment Search View -->
    <record id="view_kpi_assignment_search" model="ir.ui.view">
        <field name="name">kpi.assignment.search</field>
        <field name="model">kpi.assignment</field>
        <field name="arch" type="xml">
            <search string="Search KPI Assignments">
                <field name="kpi_definition_id"/>
                <field name="source_model"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- KPI Assignment Action -->
    <record id="action_kpi_assignment" model="ir.actions.act_window">
        <field name="name">KPI Assignments</field>
        <field name="res_model">kpi.assignment</field>
        <field name="view_mode">list,form</field>
        <field name="help">Assign KPIs to source models like Products, Partners, etc.</field>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_kpi_assignment" name="Assignments" parent="menu_kpi_operations"
              action="action_kpi_assignment" sequence="50"/>
</odoo>