<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_kpi_target_tree" model="ir.ui.view">
        <field name="name">kpi.target.tree</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <list string="KPI Targets">
                <field name="kpi_definition_id"/>
                <field name="period_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="target_value"/>
                <field name="direction"/>
                <field name="warning_threshold"/>
                <field name="critical_threshold"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_kpi_target_form" model="ir.ui.view">
        <field name="name">kpi.target.form</field>
        <field name="model">kpi.target</field>
        <field name="arch" type="xml">
            <form string="KPI Target">
                <sheet>
                    <group>
                        <group>
                            <field name="kpi_definition_id"/>
                            <field name="period_type"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="target_value"/>
                            <field name="direction"/>
                        </group>
                        <group>
                            <field name="warning_threshold"/>
                            <field name="critical_threshold"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
