<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_kpi_definition_tree" model="ir.ui.view">
        <field name="name">kpi.definition.tree</field>
        <field name="model">kpi.definition</field>
        <field name="arch" type="xml">
            <tree string="KPI Definitions">
                <field name="name"/>
                <field name="code"/>
                <field name="kpi_type"/>
                <field name="unit_of_measure"/>
                <field name="calculation_method"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_kpi_definition_form" model="ir.ui.view">
        <field name="name">kpi.definition.form</field>
        <field name="model">kpi.definition</field>
        <field name="arch" type="xml">
            <form string="KPI Definition">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_values" type="object"
                                class="oe_stat_button" icon="fa-line-chart">
                            <field name="value_ids" widget="statinfo" string="Actuals"/>
                        </button>
                        <button name="action_view_budgets" type="object"
                                class="oe_stat_button" icon="fa-money">
                            <field name="budget_line_ids" widget="statinfo" string="Budgets"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>

                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Monthly Revenue"/>
                            <field name="code" placeholder="e.g., REV001"/>
                            <field name="kpi_type"/>
                            <field name="unit_of_measure" placeholder="e.g., â‚¬, %, units"/>
                        </group>
                        <group>
                            <field name="calculation_method"/>
                            <field name="aggregation_method"/>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Describe what this KPI measures..."/>
                    </group>

                    <notebook>
                        <page string="Formula" attrs="{'invisible': [('calculation_method', '!=', 'computed')]}">
                                <group>
                                    <field name="formula" placeholder="e.g., (REV001 - COST001) / REV001 * 100"/>
                                </group>
                                <field name="formula_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="operator"/>
                                        <field name="operand_type"/>
                                        <field name="operand_kpi_id"
                                               attrs="{'invisible': [('operand_type', '!=', 'kpi')],
                                                       'required': [('operand_type', '=', 'kpi')]}" />
                                        <field name="operand_value"
                                               attrs="{'invisible': [('operand_type', '!=', 'constant')],
                                                       'required': [('operand_type', '=', 'constant')]}" />
                                        <field name="operand_field"
                                               attrs="{'invisible': [('operand_type', '!=', 'field')],
                                                       'required': [('operand_type', '=', 'field')]}" />
                                    </tree>
                                </field>
                        </page>

                        <page string="Sources">
                            <field name="source_ids">
                                <tree editable="bottom">
                                    <field name="source_model"/>
                                    <field name="is_global"/>
                                    <field name="source_filter" widget="domain"
                                           options="{'model': 'source_model'}"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Targets">
                            <field name="target_ids">
                                <tree>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="target_value"/>
                                    <field name="direction"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_kpi_definition_kanban" model="ir.ui.view">
        <field name="name">kpi.definition.kanban</field>
        <field name="model">kpi.definition</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="kpi_type"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="o_kanban_primary_left">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/> - <field name="kpi_type"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_kpi_definition_search" model="ir.ui.view">
        <field name="name">kpi.definition.search</field>
        <field name="model">kpi.definition</field>
        <field name="arch" type="xml">
            <search string="Search KPI Definitions">
                <field name="name" string="KPI"
                       filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
                <field name="kpi_type"/>
                <field name="calculation_method"/>

                <filter string="Monetary" name="monetary"
                        domain="[('kpi_type', '=', 'monetary')]"/>
                <filter string="Statistical" name="statistical"
                        domain="[('kpi_type', '=', 'statistical')]"/>
                <filter string="Formula" name="formula"
                        domain="[('kpi_type', '=', 'formula')]"/>

                <separator/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type"
                            context="{'group_by':'kpi_type'}"/>
                    <filter string="Calculation Method" name="group_method"
                            context="{'group_by':'calculation_method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_kpi_definition" model="ir.actions.act_window">
        <field name="name">KPI Definitions</field>
        <field name="res_model">kpi.definition</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first KPI Definition
            </p>
            <p>
                Define the key performance indicators you want to track across your business.
            </p>
        </field>
    </record>
</odoo>