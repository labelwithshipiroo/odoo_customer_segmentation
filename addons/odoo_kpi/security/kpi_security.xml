<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- KPI Manager Group -->
        <record id="group_kpi_manager" model="res.groups">
            <field name="name">KPI Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Rules -->
        <record id="rule_kpi_definition_user" model="ir.rule">
            <field name="name">KPI Definition User Rule</field>
            <field name="model_id" ref="model_kpi_definition"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_kpi_value_user" model="ir.rule">
            <field name="name">KPI Value User Rule</field>
            <field name="model_id" ref="model_kpi_value"/>
            <field name="domain_force">[('kpi_definition_id.active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>