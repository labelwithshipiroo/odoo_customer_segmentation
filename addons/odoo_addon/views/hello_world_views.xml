<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Hello World Tree View -->
        <record id="view_x_hello_world_tree" model="ir.ui.view">
            <field name="name">x_hello_world.tree</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="x_name"/>
                    <field name="x_description"/>
                </tree>
            </field>
        </record>

        <!-- Hello World Form View -->
        <record id="view_x_hello_world_form" model="ir.ui.view">
            <field name="name">x_hello_world.form</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="x_name"/>
                        </group>
                        <group>
                            <field name="x_description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hello World Action -->
        <record id="action_x_hello_world" model="ir.actions.act_window">
            <field name="name">Hello World</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x_hello_world</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_x_hello_world_tree"/>
        </record>
    </data>
</odoo>