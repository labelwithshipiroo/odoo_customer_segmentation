<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the x_hello_world model -->
        <record id="model_x_hello_world" model="ir.model">
            <field name="name">x_hello_world</field>
            <field name="model">x_hello_world</field>
            <field name="info">Hello World Model</field>
        </record>

        <!-- Define the fields for the model -->
        <record id="field_x_hello_world_name" model="ir.model.fields">
            <field name="model_id" ref="model_x_hello_world"/>
            <field name="name">x_name</field>
            <field name="field_description">Message</field>
            <field name="ttype">char</field>
        </record>

        <record id="field_x_hello_world_description" model="ir.model.fields">
            <field name="model_id" ref="model_x_hello_world"/>
            <field name="name">x_description</field>
            <field name="field_description">Description</field>
            <field name="ttype">text</field>
        </record>

        <!-- Hello World List View -->
        <record id="view_x_hello_world_list" model="ir.ui.view">
            <field name="name">x_hello_world.list</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <list>
                    <field name="x_name"/>
                    <field name="x_description"/>
                </list>
            </field>
        </record>

        <!-- Hello World Form View -->
        <record id="view_x_hello_world_form" model="ir.ui.view">
            <field name="name">x_hello_world.form</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Save" type="object" name="write" class="btn-primary"/>
                        <button string="Discard" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="x_name"/>
                        </group>
                        <group>
                            <field name="x_description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hello World Action -->
        <record id="action_x_hello_world" model="ir.actions.act_window">
            <field name="name">Hello World</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x_hello_world</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_x_hello_world_list"/>
        </record>
    </data>
</odoo>