<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Hello World List View -->
        <record id="view_x_hello_world_list" model="ir.ui.view">
            <field name="name">x_hello_world.list</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <list>
                    <field name="x_name" />
                    <field name="x_description" />
                </list>
            </field>
        </record>

        <!-- Hello World Form View -->
        <record id="view_x_hello_world_form" model="ir.ui.view">
            <field name="name">x_hello_world.form</field>
            <field name="model">x_hello_world</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>
                            <div class="reports-table-container"
                                style="width: 100%; min-height: 200px;">
                                <div class="text-center">
                                    <div class="spinner-border" role="status">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                    <p>Loading reports data...</p>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="x_name" />
                        </group>
                        <group>
                            <field name="x_description" />
                        </group>
                        <button string="Save" type="object" name="write" class="btn-primary" />
                        <button string="Discard" class="btn-secondary" />
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hello World Action -->
        <record id="action_x_hello_world" model="ir.actions.act_window">
            <field name="name">Hello World</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x_hello_world</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_x_hello_world_list" />
        </record>

        <!-- Grouping List View -->
        <record id="view_x_grouping_list" model="ir.ui.view">
            <field name="name">x_grouping.list</field>
            <field name="model">x_grouping</field>
            <field name="arch" type="xml">
                <list create="false" edit="false" delete="false">
                    <!-- No fields - custom content will be added by JavaScript -->
                </list>
            </field>
        </record>

        <!-- Grouping Form View -->
        <record id="view_x_grouping_form" model="ir.ui.view">
            <field name="name">x_grouping.form</field>
            <field name="model">x_grouping</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                        <button string="Save" type="object" name="write" class="btn-primary" />
                        <button string="Discard" class="btn-secondary" />
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>