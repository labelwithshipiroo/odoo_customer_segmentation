<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Add API mapping column to account list -->
    <record id="view_account_tree_inherit_api_mapping" model="ir.ui.view">
      <field name="name">account.account.tree.api.mapping</field>
      <field name="model">account.account</field>
      <field name="inherit_id" ref="account.view_account_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='name']" position="after">
          <field name="x_api_mapping" string="API mapping"/>
        </xpath>
      </field>
    </record>

    <!-- Add API mapping field to account form -->
    <record id="view_account_form_inherit_api_mapping" model="ir.ui.view">
      <field name="name">account.account.form.api.mapping</field>
      <field name="model">account.account</field>
      <field name="inherit_id" ref="account.view_account_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page" position="inside">
          <group string="Integration" position="after">
            <field name="x_api_mapping"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>