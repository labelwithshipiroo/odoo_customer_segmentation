<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the account move (invoice) form to add KPI and Targets tab -->
        <record id="view_account_move_form_kpi" model="ir.ui.view">
            <field name="name">account.move.form.kpi</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="KPI's and Targets" name="kpi_targets">
                        <!-- Empty content - placeholder for future functionality -->
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>