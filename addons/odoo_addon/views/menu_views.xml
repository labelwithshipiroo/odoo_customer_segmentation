<odoo>
    <menuitem id="menu_kpi_root" name="KPI Targets" web_icon="odoo_addon,static/description/icon.png"/>

    <!-- Grouping Action -->
    <record id="action_x_grouping" model="ir.actions.act_window">
        <field name="name">Grouping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">x_grouping</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Test URL Action -->
    <record id="action_test_page_direct" model="ir.actions.act_url">
        <field name="name">Test</field>
        <field name="url">/odoo_addon/test_page</field>
        <field name="target">self</field>
    </record>

    <!-- Accounts Action -->
    <record id="action_accounts_list" model="ir.actions.act_window">
        <field name="name">Accounts List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.account</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Account Custom Table Action -->
    <record id="action_account_table" model="ir.actions.act_window">
        <field name="name">Account Custom Table</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">x_hello_world</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="odoo_addon.view_account_table_form" />
        <field name="target">current</field>
    </record>

    <menuitem id="menu_hello_world" name="Hello World" parent="menu_kpi_root" action="odoo_addon.action_x_hello_world" sequence="10"/>
    <menuitem id="menu_grouping" name="Grouping" parent="menu_kpi_root" action="odoo_addon.action_x_grouping" sequence="20"/>
    <menuitem id="menu_test" name="Test Blank Page" parent="menu_kpi_root" action="odoo_addon.action_test_page_direct" sequence="30"/>
    <menuitem id="menu_accounts" name="Accounts List" parent="menu_kpi_root" action="odoo_addon.action_accounts_list" sequence="40"/>
    <menuitem id="menu_account_table" name="Account Custom Table" parent="menu_kpi_root" action="odoo_addon.action_account_table" sequence="50"/>
</odoo>