<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="balance_sheet_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Balance Sheet</h2>
                        <p>Company: <span t-field="o.company_id.name"/></p>
                        <p>From: <span t-field="o.date_from"/> To: <span t-field="o.date_to"/></p>
                        <!-- Placeholder for balance sheet lines -->
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr>
                                        <td><t t-esc="line['name']"/></td>
                                        <td><t t-esc="line['balance']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>