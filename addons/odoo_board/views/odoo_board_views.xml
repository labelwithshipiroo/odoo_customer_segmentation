<odoo>
    <!-- Whiteboard Form View -->
    <record id="view_whiteboard_form" model="ir.ui.view">
        <field name="name">whiteboard.board.form</field>
        <field name="model">whiteboard.board</field>
        <field name="arch" type="xml">
            <form string="Whiteboard">
               <header>
                   <button name="odoo_board.action_whiteboard_canvas" type="action" string="View Canvas" class="btn-primary"/>
               </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="user_id"/>
                        <field name="thumbnail" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Whiteboard List View -->
    <record id="view_whiteboard_list" model="ir.ui.view">
        <field name="name">whiteboard.board.list</field>
        <field name="model">whiteboard.board</field>
        <field name="arch" type="xml">
            <list string="Whiteboards">
                <field name="name"/>
                <field name="description"/>
                <field name="user_id" readonly="1"/>
                <field name="element_count" readonly="1"/>
                <field name="write_date" readonly="1"/>
                <button name="odoo_board.action_whiteboard_canvas" type="action" string="Open" class="btn btn-sm btn-primary"/>
            </list>
        </field>
    </record>

    <!-- Whiteboard Canvas Action -->
    <record id="action_whiteboard_canvas" model="ir.actions.act_window">
        <field name="name">Whiteboard Canvas</field>
        <field name="res_model">whiteboard.board</field>
        <field name="view_mode">form</field>
        <field name="target">fullscreen</field>
        <field name="context">{'form_view_ref': 'odoo_board.view_whiteboard_form'}</field>
    </record>

    <!-- Whiteboard Action -->
    <record id="action_whiteboard_board" model="ir.actions.act_window">
        <field name="name">Whiteboards</field>
        <field name="res_model">whiteboard.board</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first whiteboard
            </p>
            <p>
                Start collaborating with sticky notes and text boxes.
            </p>
        </field>
    </record>

    <!-- OdooBoard Menu -->
    <menuitem name="OdooBoard" id="odoo_board.menu_root"
        web_icon="odoo_board,static/description/icon.svg"/>
    <menuitem name="OdooBoard" id="odoo_board.menu"
        parent="odoo_board.menu_root" action="action_whiteboard_board" sequence="1"/>

</odoo>