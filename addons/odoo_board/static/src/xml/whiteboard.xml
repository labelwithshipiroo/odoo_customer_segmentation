<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Main Whiteboard View Template -->
    <t t-name="odoo_board.WhiteboardView">
        <div class="whiteboard-root">
            <div class="whiteboard-loading" invisible="not state.loading">
                <div class="loading-spinner"></div>
                <span>Loading whiteboard...</span>
            </div>
            <div class="whiteboard-error" invisible="not state.error">
                <div class="error-icon">
                    <i class="fa fa-exclamation-triangle fa-3x text-danger"/>
                </div>
                <h3>Error Loading Board</h3>
                <p t-esc="state.error"/>
                <button class="btn btn-primary" t-on-click="onBack">Go Back</button>
            </div>
            <div t-ref="container" class="whiteboard-container" invisible="state.loading or state.error"></div>
        </div>
    </t>

    <!-- Whiteboard Form Widget Template -->
    <t t-name="odoo_board.WhiteboardFormWidget">
        <div class="whiteboard-form-widget">
            <div t-ref="container" class="whiteboard-container" style="height: 600px;"></div>
        </div>
    </t>

    <!-- Kanban Preview Template -->
    <t t-name="odoo_board.WhiteboardKanbanPreview">
        <div class="whiteboard-kanban-preview">
            <canvas t-ref="canvas" width="200" height="120"></canvas>
        </div>
    </t>

    <!-- Board Card Template for Kanban View -->
    <t t-name="odoo_board.BoardCard">
        <div class="board-card">
            <div class="board-card-preview">
                <WhiteboardKanbanPreview record="record"/>
            </div>
            <div class="board-card-info">
                <h4 class="board-card-name" t-esc="record.data.name"/>
                <div class="board-card-meta">
                    <span class="board-card-date">
                        <t t-esc="record.data.write_date"/>
                    </span>
                </div>
            </div>
        </div>
    </t>

</templates>